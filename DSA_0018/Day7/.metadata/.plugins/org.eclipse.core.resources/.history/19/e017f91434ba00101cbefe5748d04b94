package com.demo.linkedlists;

public class DoublyLinkedList {
	Node head;

	class Node {

		int data;
		Node next;
		Node prev;

		public Node(int val) {
			this.data = val;
			next = null;
			prev = null;
		}
	}

	public boolean addNodeAtLast(int value) {

		Node newNode = new Node(value);

		Node temp = head;
		Node prev = null;

		if (head == null) {
//			newNode.next = head.next;
			head = newNode;
			newNode.prev = head;
			return true;
		} else {
			while (temp.next != null) {
				prev = temp;
				temp = temp.next;
			}
			temp.next = newNode;
			newNode.prev = temp;

			return true;
		}
	}

	public boolean addNodeAtIindex(int pos, int v) {
		Node newNode = new Node(v);
		if(pos==1) {
			head = newNode;
			return true;
		}else {
			Node temp = head;
			for(int j = 1;temp.next!=null&&j<pos-;j++) {
				Node prev = temp;
				temp = temp.next;
				System.out.println("****"+temp.data+"--->"+temp.next.data+"****"+j);
			}
				if(temp.next!=null) {
				newNode.next = temp.next;
				newNode.prev = temp;
				temp.next = newNode;
			}
				if(newNode.next!= null) {
				newNode.next.prev = newNode;
				return true;
			}
		}
		return false;
	}

	public void display() {
		Node temp = head;
		while (temp != null) {
			System.out.print(temp.data + "---->");
			temp = temp.next;
		}
		System.out.println("null");
	}

}