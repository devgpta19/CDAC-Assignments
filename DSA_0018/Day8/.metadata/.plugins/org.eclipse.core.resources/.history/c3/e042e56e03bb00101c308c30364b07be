package com.demo.circularlinkedList;

public class CircularSinglyLinkedList {
	Node head;

	class Node {
		int data;
		Node next;

		public Node(int data) {
			this.data = data;
			this.next = head;
		}
	}

	public CircularSinglyLinkedList() {
		super();
		this.head = null;
	}

	public CircularSinglyLinkedList(Node head) {
		super();
		this.head = head;
	}

	public boolean addNewNode(int val) {
		Node newNode = new Node(val);
		if(head==null) {
			head = newNode;
			newNode.next = head;
			return true;
		}
		else {
			Node temp = head;
			while(temp.next!= head) {
				temp = temp.next;
			}
			temp.next = newNode;
			newNode.next = head;
			return true;
		}
		
		Node newNode = new Node(value);
		if (head == null) {
			head = newNode;
			return true;
		} else {
			Node temp = head;
			while (temp.next != null) {
				temp = temp.next;
			}
			temp.next = newNode;
			return true;
		}
		
	}

	public boolean addAtIthindex(int val, int idx) {

		return false;
	}

	public boolean addNodeAfterValue(int val, int num) {

		return false;
	}

	public boolean deleteAtIthindex(int val, int idx) {

		return false;
	}

	public boolean deleteNodeAfterValue(int val) {

		return false;
	}

	public void display() {
		Node temp = head;
		do {
			System.out.print(temp.data + "---->");
			temp = temp.next;
		} while (temp != head);
		System.out.println("----> head "+head.data);
	}

	public void reverse() {
		Node temp = head;
		while(temp.next!=head) {
			temp = temp.next;
		}
		

	}

}
