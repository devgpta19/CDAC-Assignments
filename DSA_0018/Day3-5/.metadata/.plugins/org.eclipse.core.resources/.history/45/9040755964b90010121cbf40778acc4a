package com.demo.array;
import java.util.Arrays;
import java.util.Scanner;

public class MyArray {

	private int[] arr;
	private int n;
	Scanner sc = new Scanner(System.in);

	public MyArray() {
		arr = new int[10];
		n = 10;
	}

	public MyArray(int n) {
		arr = new int[n];
		this.n = n;
	}

	public int[] addElem() {
		for (int i = 0; i < n; i++) {
			System.out.println("Enter " + i + " Element of Array");
			arr[i] = sc.nextInt();
		}
		return arr;
	}

	static int count;
	int ans[] = new int[2];

	public int recBinSearch(int low, int high, int num) {
		int mid = (low + high) / 2;
		count++;
		if (arr[mid] == num)
			return mid;
		if (low < high) {

			if (arr[mid] < num) {
				return recBinSearch(mid + 1, high, num);
			} else if (arr[mid] > num) {
				return recBinSearch(low, mid - 1, num);
			}
		}
		return -1;
	}

	public int binarySearch(int x) {

		count = 0;

		int low = 0;
		int high = arr.length - 1;

		while (low < high) {
			int mid = (low + high) / 2;
			count++;
			if (arr[mid] == x)
				return mid;
			else if (arr[mid] < x)
				low = mid + 1;
			else
				high = mid - 1;
		}

		return -1;
	}

	public int getCount() {
		return count;
	}

	public int sequentialSearch(int x) {
		count = 0;
		for (int i = 0; i < n; i++) {
			count++;
			if (arr[i] == x) {
				return i;
			}
		}

		return -1;
	}

	public void bubbleSort() {
		boolean flag = false;
		for (int i = 0; i < arr.length; i++) {
			System.out.println("Hehe" + flag);
			flag = false;
			for (int j = 1; j < n - i; j++) {
				System.out.println(flag);
				if (arr[j - 1] > arr[j]) {
					int temp = arr[j - 1];
					arr[j - 1] = arr[j];
					arr[j] = temp;
				}
			}
		}

		System.out.println(Arrays.toString(arr));

		System.out.println("Something went wrong...X");

	}

	public void mergeSort(int[] arr, int start, int end) {
		if (start < end) {
			int mid = (start + end) / 2;
			mergeSort(arr, start, mid - 1);
			mergeSort(arr, mid, end);
			merge(arr, start, mid, end);
		}
	}

	private void merge(int[] arr, int start, int mid, int end) {
		int n1 = mid - start + 1;
		int n2 = end - mid;

		int[] larr = new int[n1];
		int rarr[] = new int[n2];

		for (int i = 0; i < n1; i++) {
			larr[i] = arr[start + i];
		}

		for (int i = 0; i < n2; i++) {
			rarr[i] = arr[mid];
		}
		System.out.println(Arrays.toString(larr));
		System.out.println(Arrays.toString(rarr));
		System.out.println("-----------------------------------");

		int i = 0;
		int j = 0;
		int k = start;
		while (i < n1 && j < n2) {
			if (larr[i] < rarr[j]) {
				arr[k] = larr[i];
				i++;
				k++;
			} else {
				arr[k] = rarr[j];
				j++;
				k++;
			}
		}
		while(i<n1) {
			arr[k] = larr[i];
			i++;
			k++;
		}
		while(j<n2) {
			arr[k] = rarr[j];
			j++;
			k++;
		}
		
		System.out.println(Arrays.toString(arr));
	}

	public void insertionSort(int[] arr) {
		for (int i = 1; i < arr.length; i++) {
			int j = i - 1;
			int key = arr[i];
			while (j >= 0 && arr[j] > key) {
				arr[j + 1] = arr[j];
				j--;
			}
			arr[j + 1] = key;
			System.out.println(Arrays.toString(arr));
		}
	}

	private int maxnum(int[] arr) {

		int max = arr[0];
		for (int i = 1; i < arr.length; i++) {
			if (arr[i] > max)
				max = arr[i];
		}
		return max;
	}

	public void countingSort() {

		int size = maxnum(arr) + 1;
		int[] count = new int[size];

		for (int i = 0; i < size; i++) {
			count[i] = 0;
		}

		System.out.print(Arrays.toString(count));

		for (int i = 0; i < arr.length; i++) {
			count[arr[i]]++;
		}

		for (int i = 0; i < size - 1; i++) {
			count[i] = count[i + 1] + count[i];
		}

		int[] output = new int[arr.length];

		for (int i = 0; i < arr.length; i++) {
			output[--count[arr[i]]] = arr[i];
		}

		System.out.println(Arrays.toString(output));
	}

	public void quickSort(int[] arr, int start, int end) {
		if (start < end) {
			int pos = partation(arr, start, end);
			quickSort(arr, start, pos - 1);
			quickSort(arr, pos + 1, end);

		}
		System.out.println(Arrays.toString(arr));
	}

	private int partation(int[] arr2, int start, int end) {

		int pivot = start;

		int i = start;
		int j = end;
		while (i < j) {
			while (arr[pivot] >= arr[i] && i < end)
				i++;
			while (arr[pivot] < arr[j] && j > start)
				j--;
			if (i < j) {

				int temp = arr[i];
				arr[i] = arr[j];
				arr[j] = temp;
			}
		}

		if (pivot != j) {
			int temp = arr[pivot];
			arr[pivot] = arr[j];
			arr[j] = temp;
		}
		return j;
	}
	
