package com.demo.beans;

import java.util.Calendar;
import java.util.Objects;

public class Student {

	static private int count = 0;

	@Override
	public String toString() {
		return "Student [sid=" + sid + ", sname=" + sname + ", m1=" + m1 + ", m2=" + m2 + ", m3=" + m3 + ", email="
				+ email + ", perc=" + perc + "]";
	}

	private int sid;
	private String enroll;
	private String sname;
	private int m1, m2, m3;
	private String email;
	private float perc;

	public Student() {
		super();
	}

	public Student(int sid, String sname, int m1, int m2, int m3, String email) {
		super();
		count++;
		this.sid = sid;
		this.enroll = generateId(count);
		this.sname = sname;
		this.m1 = m1;
		this.m2 = m2;
		this.m3 = m3;
		this.email = email;
		this.perc = calcPerc(m1, m2, m3);
	}

	private String generateId(int count2) {
		Calendar cal = Calendar.getInstance();
		
		return c.get(Calendar.YEAR)+"IET"+c.get
		
	}

	@Override
	public int hashCode() {
		return Objects.hash(sid);
	}

	@Override
	public boolean equals(Object obj) {
		return this.sid == ((Student) obj).sid;
	}

	public int getSid() {
		return sid;
	}

	public void setSid(int sid) {
		this.sid = sid;
	}

	public String getSname() {
		return sname;
	}

	public void setSname(String sname) {
		this.sname = sname;
	}

	public int getM1() {
		return m1;
	}

	public void setM1(int m1) {
		this.m1 = m1;
	}

	public int getM2() {
		return m2;
	}

	public void setM2(int m2) {
		this.m2 = m2;
	}

	public int getM3() {
		return m3;
	}

	public void setM3(int m3) {
		this.m3 = m3;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}

	public float getPerc() {
		return perc;
	}

	public static float calcPerc(int m1, int m2, int m3) {
		return (float) (m1 + m2 + m3) / 3;
	}
}
