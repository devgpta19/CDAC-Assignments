	@Override
	public int withdrawMoney(double bal, double wm) {
		double sum;
		int check = 0;
		double mini = AccountService.mini;
		if ((bal - wm) >= mini) {
			sum = bal - wm;
			a.setBal(sum);
			check = 1;
			return check;
		} else {
			check = 2;
			if (bal > mini) {
				check = 3;
				return check;
			}
			return check;
		}
	}

