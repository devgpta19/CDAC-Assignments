	@Override
	public Map<Customer, List<Item>> findByName(String nm) {
		// TODO Auto-generated method stub
		Map<Customer, List<Item>> mp = new HashMap<>();
		Set<Customer> keys = hm.keySet();
		for(Customer c : keys) {
			if(c.getCname().equals(nm)) {
				mp.put(c, hm.get(c));
			}
		}
		if(!mp.isEmpty())
		return mp;
		
		return null;
	}

