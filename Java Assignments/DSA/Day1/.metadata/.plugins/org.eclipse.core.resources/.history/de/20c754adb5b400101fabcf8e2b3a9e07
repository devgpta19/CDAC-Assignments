package com.demo.arrays;

public class MyArray {

	private int[] arr;
	private int count;

	public MyArray() {
		arr = new int[10];
		count = 0;
	}

	public MyArray(int n) {
		arr = new int[n];
		count = 0;
	}

	public MyArray(int[] arr, int count) {
		super();
		this.arr = arr;
		this.count = count;
	}

	public int getCapacity() {
		return arr.length;
	}

	public int getSize() {
		return count;
	}

	public boolean add(int val) {

		arr[count] = val;
		count++;

		return false;
	}

	public boolean add(int pos, int val) {

		if (pos < count) {
			for (int i = count - 1; i >= pos; i--) {
				arr[i + 1] = arr[i];
			}

			arr[pos] = val;
		}

		return false;
	}

	public int searchByValue(int val) {

		for (int i = 0; i < count; i++) {
			if (arr[i] == val)
				return i;
		}

		return -1;
	}

	public boolean deleteByPos(int pos) {
		if (pos < count) {
			for (int i = pos; i < count; i++) {
				arr[i] = arr[i + 1];
			}
			count--;
			return true;
		}
		return false;
	}

	public boolean deleteByvalue(int val) {
		int pos = searchByValue(val);
		if (pos == -1)
			return false;
		return deleteByPos(pos);
	}

	public int[] rotateArray(boolean flag, int num) {
		num = num % count;
		if (flag) {
			for (int i = 0; i < num; i++) {
				int last = arr[count - 1];
				for (int j = count - 1; j >= 0; j--) {
					arr[j] = arr[j - 1];
				}
				arr[0] = last;
			}
		} else {
			for (int i = 0; i < num; i++) {
				int last = arr[0];
				for (int j = 0; j <= count - 1; j++) {
					arr[j] = arr[j + 1];
				}
				arr[count - 1] = last;
			}
		}

		return arr;
	}

	public int[] replaceArray(boolean flag) {
		if (flag) {
			//reverse value in same array
			for (int i = 0, j = count - 1; i < j; i++, j--) {
				int temp = arr[i];
				arr[i] = arr[j];
				arr[j] = temp;
			}
			return arr;
		} else {
			//reverse array and return another array(temp[])
			int[] temp = new int[count];
			for (int i = 0, j = count - 1; i < count - 1; i++, j--) {
				temp[i] = arr[j]; // put the current array value into another array in reverse order
			}
			return temp;
		}
	}
	
	public int maxVal() {
		int max=arr[0];
		for(int i = 0; i<count;i++) {
			
		}
		return max;
	}
	
	public int[] exchangeIndexValue() {
		int[] 
	}

}

























