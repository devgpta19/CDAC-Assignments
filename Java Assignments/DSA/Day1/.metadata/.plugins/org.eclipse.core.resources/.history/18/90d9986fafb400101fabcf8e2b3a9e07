package com.demo.arrays;

public class MyArray {

	private int[] arr;
	private int count;

	public MyArray() {
		arr = new int[10];
		count = 0;
	}

	public MyArray(int n) {
		arr = new int[n];
		count = 0;
	}

	public MyArray(int[] arr, int count) {
		super();
		this.arr = arr;
		this.count = count;
	}

	public int getCapacity() {
		return arr.length;
	}

	public int getSize() {
		return count;
	}

	public boolean add(int val) {

		arr[count] = val;
		count++;

		return false;
	}

	public boolean add(int pos, int val) {

		if (pos < count) {
			for (int i = count - 1; i >= pos; i--) {
				arr[i + 1] = arr[i];
			}

			arr[pos] = val;
		}

		return false;
	}

	public int searchByValue(int val) {

		for (int i = 0; i < count; i++) {
			if (arr[i] == val)
				return i;
		}

		return -1;
	}

	public boolean deleteByPos(int pos) {
		if (pos < count) {
			for (int i = pos; i < count; i++) {
				arr[i] = arr[i + 1];
			}
			count--;
			return true;
		}
		return false;
	}

	public boolean deleteByvalue(int val) {
		int pos = searchByValue(val);
		if(pos==-1) return false;
		return deleteByPos(pos);
	}
	
	public void rotateArray(boolean flag, int num) {
		if(flag) {
			num = num%count;
			
			for(int i=0;i<num;i++) {

				for(int j)
				
			}
		}
	}

}
