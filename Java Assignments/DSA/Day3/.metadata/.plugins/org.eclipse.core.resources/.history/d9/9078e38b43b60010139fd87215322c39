package com.demo.array;

import java.util.Arrays;
import java.util.Scanner;

public class MyArray {

	private int[] arr;
	private int n;
	Scanner sc = new Scanner(System.in);

	public MyArray() {
		arr = new int[10];
		n = 10;
	}

	public MyArray(int n) {
		arr = new int[n];
		this.n = n;
	}

	public int[] addElem() {
		for (int i = 0; i < n; i++) {
			System.out.println("Enter " + i + " Element of Array");
			arr[i] = sc.nextInt();
		}
		return arr;
	}

	static int count;
	int ans[] = new int[2];

	public int recBinSearch(int low, int high, int num) {
		int mid = (low + high) / 2;
		count++;
		if (arr[mid] == num)
			return mid;
		if (low < high) {

			if (arr[mid] < num) {
				return recBinSearch(mid + 1, high, num);
			} else if (arr[mid] > num) {
				return recBinSearch(low, mid - 1, num);
			}
		}
		return -1;
	}

	public int binarySearch(int x) {

		count = 0;

		int low = 0;
		int high = arr.length - 1;

		while (low < high) {
			int mid = (low + high) / 2;
			count++;
			if (arr[mid] == x)
				return mid;
			else if (arr[mid] < x)
				low = mid + 1;
			else
				high = mid - 1;
		}

		return -1;
	}

	public int getCount() {
		return count;
	}

	public int sequentialSearch(int x) {
		count = 0;
		for (int i = 0; i < n; i++) {
			count++;
			if (arr[i] == x) {
				return i;
			}
		}

		return -1;
	}

	public void bubbleSort() {
		boolean flag = false;
		for(int i = 0; i<arr.length;i++) {
			System.out.println("Hehe"+flag);
			flag = false;
			for(int j=1; j<n-i; j++) {
				if(arr[j-1]>arr[j]) {
					int temp = arr[j-1];
					arr[j-1] = arr[j];
					arr[j] = temp;
					flag = true;
				}
			}
		}
		
		if(flag)
			System.out.println(Arrays.toString(arr));
		
		System.out.println("Something went wrong...X");
		
		
	}
}
