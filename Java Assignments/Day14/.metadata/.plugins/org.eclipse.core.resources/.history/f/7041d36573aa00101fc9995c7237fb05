//				return true;
//			} catch (Exception e) {
//				e.printStackTrace();
//				return false;
//			}

//			try (ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(fname,true))) {
//				for (Employee e : lst) {
//					oos.writeObject(e);
//				}
//				return true;
//			} catch (Exception e) {
//				e.printStackTrace();
//				return false;
//			}
//	}

}
