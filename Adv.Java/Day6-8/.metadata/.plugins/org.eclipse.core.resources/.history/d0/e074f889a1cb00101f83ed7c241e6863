package com.demo.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.HashSet;
import java.util.Set;

public class ProductDaoImpl implements ProductDao {

	Connection conn = DBUtil.getMyConnection();
	@Override
	public Set<Integer> getAllCat() {
		Set<Integer> clist = new HashSet<>();
		try {
			PreparedStatement pst = conn.prepareStatement("select distinct procategory from product1;");
			ResultSet rs = pst.executeQuery();
			while(rs.next()) {
				clist.add(rs.getInt(1));
			}
			return clist;
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
	}
	@Override
	public ResultSet fatchProduct(int catID) {
		
		try {
			PreparedStatement pst = conn.prepareStatement("select * from product1 where procategory = ?");
			pst.setInt(1, catID);
			ResultSet rs = pst.executeQuery();
			
			while(rs.next()) {
				clist.add(rs.getInt(1));
			}
			return clist;
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return null;
	}
	
}
